<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sh.entities.Product" table="product">
        <id name="pNo" column="product_no"/>
        <property name="pNm" column="product_Nm"/>
        <property name="des" column="description"/>
        <property name="mNm" column="manufacturer_nm"/>
        <property name="cNm" column="category_nm"/>
        <property name="price" column="price"/>
    </class>
</hibernate-mapping>