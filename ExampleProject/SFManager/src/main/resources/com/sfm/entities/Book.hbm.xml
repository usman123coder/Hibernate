<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.sfm.entities">
    <class name="Book" table="book">
        <id name="isbnNo" column="isbn_no"/>
        <property name="title"/>
        <property name="authorName" column="author"/>
        <property name="publisherDate" column="published_dt"/>
        <property name="publisherName" column="publisher"/>
        <property name="salary"/>
    </class>
</hibernate-mapping>